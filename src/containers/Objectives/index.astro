---
import './index.scss'
import { listOfObjectives } from '../../utils/objectives'
---

<section class='objectives bg-gray'>
  <h3 id="objectives" class='objectives__title general-title scrollable-section'> Objectives </h3>
  <div class='objectives__content'>
    {listOfObjectives.map(list => (
      <div class='objectives__content__group'>
        {list.map(objective => (
          <article class='objectives__content__group__row'>
            <img class='objectives__content__group__row__thumbnail' alt='objective-icon' src={objective.thumbnail} height={38} width={38} />
            <p class='objectives__content__group__row__description general-description'> {objective.description} </p>
          </article>
        ))}
      </div>
    ))}
  </div>
</section>

