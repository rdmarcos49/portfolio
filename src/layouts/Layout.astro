---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import { SEO } from "astro-seo";
import Header from '../components/Header/index.astro';
import Sidebar from '../components/Sidebar/index.astro';
import MyselfModal from '../components/MyselfModal/index.astro';
import '../global/container.styles.scss'
import '../global/reset.styles.scss'

const description = 'Personal portfolio created with Astro.build'
const openGraphConfig = {
	basic: {
		title: 'Portfolio - Roberto Marcos - Frontend Software Developer',
		type: 'website',
		image: '/images/avatar.png',
		url: 'https://portfolio-rdmarcos49.vercel.app/',
	},
	optional: {
		description: 'Here you would find information about the projects where I worked, my skills, my education and my objectives.',
	},
	image: {
		alt: 'my-avatar',
		height: 150,
		width: 100,
	}
}
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<SEO
			title={title}
			description={description}
			openGraph={openGraphConfig}
			canonical={'https://portfolio-rdmarcos49.vercel.app/'}
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/javascript-favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600&display=swap">
	</head>
	<body>
		<Sidebar />
		<MyselfModal />
		<Header />
		<main class='section-content__main'>
			<slot />
		</main>
	</body>
</html>
