---
const { title, date, items } = Astro.props;
---

<article class='accordion' aria-expanded='false' tabindex='0'>
  <div class='text-wrapper'>
    <p class='text-wrapper__title'> {title} </p>
    <p class='text-wrapper__date'> {date} </p>
  </div>
  <img src='/icons/chevron.png' alt='toggle-control' aria-expanded='false'/>
  <div class='dummy'>
    {items.map(() => <p>Coming soon...</p>)}
  </div>
</article>

<style lang='scss'>
  article {
    align-items: center;
    background-color: #FFFFFF;
    border: 1px solid #000000;
    border-radius: 8px;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
    cursor: pointer;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 16px;
    transition: 0.25s;

    .dummy {
      display: none;
      padding-top: 16px;
      text-align: left;
      width: 100%;
    }

    &[aria-expanded='true'] .dummy {
      display: flex;
    }
  }

  .text-wrapper {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    gap: 8px;

    &__title {
      font-size: 16px;
      font-weight: 600;
    }

    &__date {
      font-weight: 300px;
    }
  }

  img {
    transition: 0.25s ease-in-out;
    transform: scaleY(1);
    width: 36px;

    &[aria-expanded='false'] {
      transform: scaleY(-1);
    }
  }
</style>
